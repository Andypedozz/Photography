---
import "../styles/scrivimi.css"
---

<div>
  <!-- Header -->
  <header>
      <div class="container nav">
          <a href="/" class="brand">Record Studio</a>
      </div>
  </header>

  <!-- Contact Section -->
  <section class="contact-section">
      <div class="container">
          <div class="contact-content">
              <h1 class="section-title">Scrivimi</h1>
              <p class="section-subtitle">
                  Hai un progetto in mente? Raccontaci la tua visione e trasformiamola insieme in realtà.
              </p>

              <form class="contact-form" id="contactForm">
                  <div class="form-group">
                      <label for="email">Email</label>
                      <input 
                          type="email" 
                          id="email" 
                          name="email" 
                          placeholder="tuo@email.com" 
                          required
                      >
                  </div>

                  <div class="form-group">
                      <label for="subject">Oggetto</label>
                      <input 
                          type="text" 
                          id="subject" 
                          name="subject" 
                          placeholder="Di cosa vuoi parlare?" 
                          required
                      >
                  </div>

                  <div class="form-group">
                      <label for="message">Messaggio</label>
                      <textarea 
                          id="message" 
                          name="message" 
                          placeholder="Raccontaci la tua idea, il tuo progetto o qualsiasi domanda tu abbia..." 
                          required
                      ></textarea>
                  </div>

                  <button type="submit" class="submit-btn">
                      <span>Invia Messaggio</span>
                  </button>

                  <div class="success-message" id="successMessage">
                      ✓ Messaggio inviato con successo! Ti risponderemo presto.
                  </div>
              </form>
          </div>
      </div>
  </section>

  <!-- Footer -->
  <footer id="contacts">
      <div class="container">
          <div class="footer-grid">
              <div class="f-col">
                  <h5>Record Studio Srl</h5>
                  <p>Via Tullio Piccinini 35, 31033 Castelfranco Veneto, TV</p>
              </div>
              <div class="f-col">
                  <h5>Contatti</h5>
                  <p>
                      +39 342 3514967 · <a href="mailto:info@recordstudio.it">info@recordstudio.it</a>
                  </p>
              </div>
              <div class="f-col">
                  <h5>Language</h5>
                  <p class="lang">
                      <a href="#" class="active">English</a>
                      <a href="#">Italiano</a>
                  </p>
              </div>
          </div>
          <div class="credits">© 2025 Record Studio – All rights reserved</div>
      </div>
  </footer>
</div>

<script>
    // Form submission handler
	const contactForm = document.getElementById('contactForm');
	if(contactForm != null) {
		contactForm.addEventListener('submit', function(e) {
			e.preventDefault();
			
			// Simula invio del form
			const btn = this.querySelector('.submit-btn');
			const successMsg = document.getElementById('successMessage');
			
			if(btn != null && successMsg != null) {
				btn["disabled"] = true;
				btn.innerHTML = '<span>Invio in corso...</span>';
				
				// Simula delay di invio
				setTimeout(() => {
					successMsg.classList.add('show');
					btn["disabled"] = false;
					btn.innerHTML = '<span>Invia Messaggio</span>';
					
					// Reset form
					this["reset"]();
					
					// Nascondi messaggio dopo 5 secondi
					setTimeout(() => {
						successMsg.classList.remove('show');
					}, 5000);
				}, 1500);
			}
		});
	}

    // Smooth scroll per link interni
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        });
    });
</script>