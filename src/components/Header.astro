---
const { links } = Astro.props;
---

<header
    class="fixed top-0 left-0 right-0 z-50 bg-zinc-950/80 backdrop-blur-md border-b border-zinc-800/50 transition-all duration-300"
>
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <div
            class="text-xl font-light tracking-wider hover:text-zinc-400 transition-colors cursor-pointer"
        >
            Giovanni Uguccioni
        </div>
        <nav class="hidden md:flex items-center gap-8">
            {
                links.map((link: any) => (
                    <a
                        href={link.href}
                        class="text-sm tracking-wide text-zinc-400 hover:text-zinc-100 transition-all duration-300 hover:-translate-y-0.5"
                    >
                        {link.label}
                    </a>
                ))
            }
            <a
                href="#cta"
                class="px-6 py-2 bg-zinc-100 text-zinc-950 text-sm font-medium rounded-full hover:bg-zinc-200 transition-all duration-300 hover:scale-105"
                >Scrivimi!</a
            >
        </nav>
    </div>
</header>
