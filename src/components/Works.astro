---
import Article from "./Article.astro"

const projects = [
    { title: "Pizzeria Roby's", image: "images/robys.jpg" },
    { title: "Gelateria Si Lo So", image: "images/siloso.jpg" },
    { title: "Opia SS25", image: "images/opia.jpg" },
    { title: "Supermoto", image: "images/supermoto.jpg" }
]
---

<section id="works" class="py-32 px-6 bg-zinc-900/50">
    <div class="max-w-7xl mx-auto">
        <h2 class="text-5xl md:text-6xl font-light mb-20 animate-slide-up">
            I miei lavori
        </h2> 
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map(project => <Article project={project}/>)}
        </div>
    </div>
</section>
