---
const { project } = Astro.props;
---

<article class="group cursor-pointer card-3d">
    <div
        class="relative overflow-hidden rounded-2xl bg-zinc-800 aspect-4/5 mb-4 transition-all duration-500 group-hover:shadow-2xl group-hover:shadow-violet-500/20 group-hover:scale-[1.02]"
    >
        <div
            class="absolute inset-0 bg-linear-to-br from-violet-500/20 to-blue-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>
            <img
                src={project.image}
                alt={project.title}
                class="absolute h-full inset-0 object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
            />
        </div>
    </div>
    <div class="flex items-center justify-between">
        <h3
            class="text-xl font-light group-hover:text-violet-400 transition-colors duration-300"
        >
            {project.title}
        </h3>
        <span
            class="text-sm text-zinc-500 group-hover:text-zinc-100 group-hover:translate-x-2 transition-all duration-300"
